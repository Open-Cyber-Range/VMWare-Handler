{
  "name": "Go",
  "image": "nexus.ex.c-lab.ee:8003/go-development:latest",
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

  "settings": {
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.gopath": "/go"
  },

  "extensions": ["golang.Go", "gitlab.gitlab-workflow"],

  "portsAttributes": {
    "9000": {
      "label": "devcontainer",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "vscode"
}
